{
  "preset_name": "Endless Runner",
  "preset_creator": "Vinicius Guerrero",
  "preset_version": "1.0",
  "animations": {
    "Idle": "Idle-loop",
    "Walking": "Walking-loop",
    "Running": "Running-loop",
    "Jumping": "Jumping-loop"
  },
  "stateTransitions": [
    {
      "from": "Idle",
      "switchMode": 1,
      "to": "Walking",
      "xFadeTime": 0.3
    },
    {
      "from": "Walking",
      "switchMode": 1,
      "to": "Running",
      "xFadeTime": 0.3
    },
    {
      "from": "Running",
      "switchMode": 1,
      "to": "Walking",
      "xFadeTime": 0.3
    },
    {
      "from": "Walking",
      "switchMode": 1,
      "to": "Idle",
      "xFadeTime": 0.3
    }
  ],
  "states": [
    {
      "name": "Idle",
      "positionX": 200,
      "positionY": 100
    },
    {
      "name": "Walking",
      "positionX": 400,
      "positionY": 100
    },
    {
      "name": "Running",
      "positionX": 600,
      "positionY": 100
    },
    {
      "name": "Jumping",
      "positionX": 400,
      "positionY": 200
    }
  ]
}
